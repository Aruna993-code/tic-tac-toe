pipeline {
    agent {
        docker {
            image 'node:18.17.1-alpine3.18'
        }
    }
    environment {
        FIREBASE_DEPLOY_TOKEN = credentials('firebase-token')
    }
    stages {
        stage('Building') {
            steps {
                sh 'npm install -g firebase-tools'
            }
        }

        stage('Testing') {
            steps {
                sh 'firebase deploy -P tic-tac-toe-testing-352e8 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Staging') {
            steps {
                sh 'firebase deploy -P devops-assignment-8-stag-110a9 --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }

        stage('Production') {
            steps {
                sh 'firebase deploy -P devops-assignment-8-prod-15a0c --token "$FIREBASE_DEPLOY_TOKEN"'
            }
        }
    }
}


